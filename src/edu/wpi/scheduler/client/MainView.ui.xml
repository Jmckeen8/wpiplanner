<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:s="urn:import:edu.wpi.scheduler.client.tabs">
	<ui:with field='res' type='edu.wpi.scheduler.client.Resources' />

	<ui:style>
		.rightTabs {
			float: right;
			height: 50px;
		}
		
		.rightTabs > button {
			height: 50px;
		}
		
		.topBar {
			border-bottom: 1px solid #000;
			background-color: #c41230;
		}
		
		.headerTitle{
			color: white;
			font-size: 50px;
			font-family: Arial;
		}
		
		.authorLabel{
			color:white;
			font-size: 12px;
			font-family: Arial;
		}
	</ui:style>
	<g:DockLayoutPanel ui:field="layoutPanel">
		<g:north size="50">
			<g:DockLayoutPanel styleName='{style.topBar}'>
				<g:west size="256">
					<g:Label styleName='{style.headerTitle}'>Planner</g:Label>
				</g:west>
				<g:west size="512">
					<g:Label styleName='{style.authorLabel}'>Feedback and Bug Reports - Discord: Jmckeen#9470 - Reddit: u/Jmckeen8</g:Label>
				</g:west>
				<g:center>
					<g:SimplePanel>
						<s:TabList styleName='{style.rightTabs}' ui:field="tabList" />
					</g:SimplePanel>
				</g:center>
			</g:DockLayoutPanel>
		</g:north>
		<g:center>
			<g:SimplePanel ui:field="bodyPanel"/>
		</g:center> 

	</g:DockLayoutPanel>
</ui:UiBinder> 
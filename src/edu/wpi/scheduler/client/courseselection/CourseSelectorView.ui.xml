<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:edu.wpi.scheduler.client.courseselection">

	<ui:style>
		.pretty {	
		    font-weight: bold;
		    margin-bottom: 5px;
		    padding: 3px;
		    text-align: center;
		    background-color: lightgrey;
		    border-top: 2px grey solid;
		}
	</ui:style>

	<g:SplitLayoutPanel>
		<g:west size="250">
			<c:DepartmentListBox ui:field="departmentList" />
		</g:west>

		<g:east size='250'>
			<g:DockLayoutPanel>
				<g:center>
					<c:CourseDescriptionInfo ui:field="courseDescription" />
				</g:center>
				<g:south size="250">
					<g:ScrollPanel>
						<g:FlowPanel>
							<g:HTMLPanel styleName='{style.pretty}'>Courses</g:HTMLPanel>
							<c:CourseSelection ui:field="courseSelection" />
						</g:FlowPanel>
					</g:ScrollPanel>
				</g:south>
			</g:DockLayoutPanel>
		</g:east>

		<g:center>
			<g:ScrollPanel>
				<c:CourseList ui:field="courseList" />
			</g:ScrollPanel>
		</g:center>

	</g:SplitLayoutPanel>


</ui:UiBinder>
